@model HaverDevProject.Models.NcrProcurement

<div class="container mt-3">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <button class="btn custom-header-bg icon-drop text-start" type="button" data-bs-toggle="collapse" data-bs-target="#procurementSection" aria-expanded="@ViewBag.IsNCRProcView.ToString().ToLower()" aria-controls="procurementSection">
                Procurement <i class="bi bi-chevron-down"></i>
            </button>
            <div class="collapse @(ViewBag.IsNCRProcView? "show" : "")" id="procurementSection">
                <div class="card">
                    <div class="card-body pb-0 pt-0">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="four-cols">Supplier Return Request</th>
                                    <th class="four-cols">Expected Date</th>
                                    <th class="four-cols">Dispose on Site</th>
                                    <th class="four-cols">Supplier Return Completed</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="card-body pb-0 pt-0">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td class="four-cols">
                                        @if (Model.Ncr.NcrProcurement.NcrProcSupplierReturnReq == true)
                                        {
                                            <text>Yes</text>
                                        }
                                        else
                                        {
                                            <text>No</text>
                                        }
                                    </td>
                                    <td class="four-cols">@Model.Ncr.NcrProcurement.NcrProcExpectedDate</td>
                                    <td class="four-cols">
                                        @if (Model.Ncr.NcrProcurement.NcrProcDisposedAllowed == true)
                                        {
                                            <text>Yes</text>
                                        }
                                        else
                                        {
                                            <text>No</text>
                                        }
                                    </td>
                                    <td class="four-cols">
                                        @if (Model.Ncr.NcrProcurement.NcrProcSAPReturnCompleted == true)
                                        {
                                            <text>Yes</text>
                                        }
                                        else
                                        {
                                            <text>No</text>
                                        }
                                    </td>
                                </tr>
                            </tbody>

                        </table>
                    </div>
                    <div class="card-body pb-0 pt-0">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="two-cols-2">Supplier Credit</th>
                                    <th class="two-cols-2">Supplier Billed</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="four-cols">
                                        @if (Model.Ncr.NcrProcurement.NcrProcCreditExpected == true)
                                        {
                                            <text>Yes</text>
                                        }
                                        else
                                        {
                                            <text>No</text>
                                        }
                                    </td>
                                    <td class="two-cols">
                                        @if (Model.Ncr.NcrProcurement.NcrProcSupplierBilled == true)
                                        {
                                            <text>Yes</text>
                                        }
                                        else
                                        {
                                            <text>No</text>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>


                <button class="btn custom-secondary-bg icon-drop text-start" type="button" data-bs-toggle="collapse" data-bs-target="#additionalInfo" aria-expanded="false" aria-controls="additionalInfo">
                    Additional Information <i class="bi bi-chevron-down"></i>
                </button>
                <div class="collapse" id="additionalInfo">
                    <div class="card-header">
                        Images
                    </div>

                    <div class="card-body pb-0">
                        <div class="row">
                            @{
                                if (Model.Ncr.NcrQa.ItemDefectPhotos != null && Model.Ncr.NcrQa.ItemDefectPhotos.Any())
                                {
                                    foreach (var photo in Model.Ncr.NcrQa.ItemDefectPhotos)
                                    {
                                        if (photo.ItemDefectPhotoContent != null)
                                        {
                                            string imageBase64 = Convert.ToBase64String(photo.ItemDefectPhotoContent);
                                            string imageSrc = string.Format("data:" + photo.ItemDefectPhotoMimeType + ";base64,{0}", imageBase64);

                                            <div class="text-center pb-3 col-6">
                                                <img src="@imageSrc" alt="Defect Photo of @Model.Ncr.NcrQa.Defect.DefectName" title="Defect Photo of @Model.Ncr.NcrQa.Defect.DefectName" class="img-fluid rounded" />
                                            </div>
                                        }
                                    }
                                }
                            }
                        </div>
                    </div>
                    <div class="card-header">
                        Videos
                    </div>
                    <div class="card-body">

                        @if (Model.Ncr.NcrQa.NcrQaDefectVideo != null)
                        {
                            <a href="@Model.Ncr.NcrQa.NcrQaDefectVideo" target="_blank">Video Link</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

