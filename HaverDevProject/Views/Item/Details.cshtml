@model HaverDevProject.Models.Item

@{
    ViewData["Title"] = "Item";
}

<div class="col-md-6 col-10 mx-auto">
    <h1><i class="bi bi-caret-right-fill"></i>Items</h1>
</div>
<div class="col-md-6 col-10 mx-auto">
    <div class="card border-2">
        <div class="card-header bg-custom-color mb-2">
            <h2 class="m-0">Item Details</h2>
        </div>
        <div class="card-body col-lg-10 col-11 mx-auto">
            <dl class="row">
                <dt class="col-sm-10">
                    SAP No.
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ItemNumber)
                </dd>
                <dt class="col-sm-10">
                    Description
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ItemName)
                </dd>
                @* <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.ItemDescription)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ItemDescription)
                </dd> *@
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.Supplier)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Supplier.SupplierName)
                </dd>
                <dt class="col-sm-4">
                Items
                </dt>
                <dd class="col-sm-10">
                @{
                int itemCount = Model.ItemDefects.Count;
                if (itemCount > 0)
                {
                string firstItem = Model.ItemDefects.FirstOrDefault().Defect.DefectName;
                if (itemCount > 1)
                {
                string itemList = "";
                var c = Model.ItemDefects.ToList();
                for (int i = 1; i < itemCount; i++)//Skip the first because we have it already
                {
                itemList += c[i].Defect.DefectName + " <br />";
                }
                <a class="text-dark" role="button" data-bs-toggle="collapse" href="#collapseItem@(Model.ItemId)"
                aria-expanded="false" aria-controls="collapseItem@(Model.ItemId)">
                @firstItem <span class="badge btn-primary">@itemCount</span>
                </a>
                <div class="collapse" id="collapseItem@(Model.ItemId)">
                @Html.Raw(itemList)
                </div>
                }
                else
                {
                @firstItem
                }
                }
                }
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <div class="form-group d-flex justify-content-end mt-2">
                <div>
                    <button type="button" onclick="location.href='@ViewData["returnURL"]'" class="btn btn-primary">
                        <i class="bi bi-arrow-90deg-left"></i> Back to the @ViewData["ControllerName"] List
                    </button>
                </div>
                <div>
                    <a type="button" class="btn btn-primary ms-4" asp-action="Edit" asp-route-id="@Model?.ItemId">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                </div>                                              
            </div>
        </div>
    </div>
</div>
