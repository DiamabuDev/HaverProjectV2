@model HaverDevProject.Models.Ncr

@{
    ViewData["Title"] = "Create";
}

<h1>Non Conforming Report Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().Item.Supplier.SupplierId" class="control-label"></label>
                <select asp-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().Item.Supplier.SupplierId" class="form-control" asp-items="ViewBag.SupplierId">
                    <option value="">Select a Supplier</option>
                </select>
                <span asp-validation-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().Item.Supplier.SupplierId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NcrQas.FirstOrDefault().ProAppId" class="control-label"></label>
                <select asp-for="NcrQas.FirstOrDefault().ProAppId" class="form-control" asp-items="ViewBag.ProAppId">
                    <option value="">Select an Applicable Process</option>
                </select>
                <span asp-validation-for="NcrQas.FirstOrDefault().ProAppId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().OrderNumber" class="control-label"></label>
                <input asp-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().OrderNumber" class="form-control" />
                <span asp-validation-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().OrderNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NcrQas.FirstOrDefault().NcrQasalesOrder" class="control-label"></label>
                <input asp-for="NcrQas.FirstOrDefault().NcrQasalesOrder" class="form-control" />
                <span asp-validation-for="NcrQas.FirstOrDefault().NcrQasalesOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().OrderQuanReceived" class="control-label"></label>
                <input asp-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().OrderQuanReceived" class="form-control" />
                <span asp-validation-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().OrderQuanReceived" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().OrderQuanDefective" class="control-label"></label>
                <input asp-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().OrderQuanDefective" class="form-control" />
                <span asp-validation-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().OrderQuanDefective" class="text-danger"></span>
            </div>
        </form>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().Item.ItemName" class="control-label"></label>
            <select asp-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().Item.ItemName" class="form-control" asp-items="ViewBag.ItemId">
                <option value="">Select an Item</option>
            </select>
            <span asp-validation-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().Item.ItemName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().Item.ItemDefects.FirstOrDefault().Defect.DefectId" class="control-label"></label>
            <select asp-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().Item.ItemDefects.FirstOrDefault().Defect.DefectId" class="form-control" asp-items="ViewBag.DefectId">
                <option value="">Select an Defect</option>
            </select>
            <span asp-validation-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().Item.ItemDefects.FirstOrDefault().Defect.DefectId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().Item.ItemDefects.FirstOrDefault().Defect.DefectDesription" class="control-label"></label>
            <textarea asp-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().Item.ItemDefects.FirstOrDefault().Defect.DefectDesription" rows="5" class="form-control"></textarea>
            <span asp-validation-for="NcrQas.FirstOrDefault().OrderDetails.FirstOrDefault().Item.ItemDefects.FirstOrDefault().Defect.DefectDesription" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="NcrQas.FirstOrDefault().NcrQaitemMarNonConforming" /> @Html.DisplayNameFor(model => model.NcrQas.FirstOrDefault().NcrQaitemMarNonConforming)
            </label>
        </div>
        <div class="form-group">
            <label asp-for="NcrQas.FirstOrDefault().NcrQacreationDate" class="control-label"></label>
            <input asp-for="NcrQas.FirstOrDefault().NcrQacreationDate" class="form-control" />
            <span asp-validation-for="NcrQas.FirstOrDefault().NcrQacreationDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}