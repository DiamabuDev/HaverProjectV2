@model HaverDevProject.Models.NcrEng

@{
    ViewData["Title"] = "Non Conforming Report Details";
}

<div class="container mt-3">

    <div class="row">
        <div class="col-md-10 mx-auto">
            <h1><i class="bi bi-caret-right-fill"></i>Non Conforming Report Details</h1>            
            <div class="row align-items-center mb-3 mt-4">
                <div class="col-auto fw-bold fs-5">
                    NCR No.:
                </div>
                <div class="col-auto fs-5">
                    @Model.Ncr.NcrNumber
                </div>
                <div class="col-auto">
                    <span class="btn @(Model.Ncr.NcrStatus == false ? "text-white bg-danger" : "text-white bg-success")" style="cursor: default;">
                        @(Model.Ncr.NcrStatus == true ? "Active" : "Closed")
                    </span>
                </div>
                @if (Model.Ncr.NcrStatus == false)
                {
                    <div class="col-auto">
                        <span class="fw-bold">Engineering Department:</span>
                        <span> [Department Name]</span>
                    </div>
                }
                <div class="col-auto">
                    <span class="fw-bold">Last Updated:</span>
                    <span> @Model.Ncr.NcrLastUpdated.ToString("yyyy-MM-dd")</span>
                </div>
            </div>


            <button class="btn custom-header-bg icon-drop text-start" type="button" data-bs-toggle="collapse" data-bs-target="#qualityRepSection" aria-expanded="true" aria-controls="qualityRepSection">
                Quality Representative <i class="bi bi-chevron-down"></i>
            </button>
            <div class="collapse" id="qualityRepSection">
                <div class="card">
                    <div class="card-body pb-0 pt-0">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="four-cols">Process Applicable</th>
                                    <th class="four-cols">Supplier Name</th>
                                    <th class="four-cols">PO or Prod. No.</th>
                                    <th class="four-cols">Sales Order No.</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="four-cols">@(Model.Ncr.NcrQa.NcrQaProcessApplicable == true ? "Supplier or Rec-Insp" : "WIP (Production Order)")</td>
                                    <td class="four-cols">@Model.Ncr.NcrQa.Item.Supplier.SupplierName</td>
                                    <td class="four-cols">@Model.Ncr.NcrQa.NcrQaOrderNumber</td>
                                    <td class="four-cols">@Model.Ncr.NcrQa.NcrQaSalesOrder</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-body pb-0 pt-0">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Item Marked NonConforming</th>
                                    <th>Engineer Disposition Required?</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@(Model.Ncr.NcrQa.NcrQaItemMarNonConforming == true ? "Yes" : "No")</td>
                                    <td>@(Model.Ncr.NcrQa.NcrQaEngDispositionRequired == true ? "Yes" : "No")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            Item Information
                        </div>
                        <div class="card-body pb-0 pt-0">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="four-cols">SAP No.</th>
                                        <th class="four-cols">Description</th>
                                        <th class="four-cols">Quantity Received</th>
                                        <th class="four-cols">Quantity Defective</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="four-cols">@Model.Ncr.NcrQa.Item.ItemNumber</td>
                                        <td class="four-cols">@Model.Ncr.NcrQa.Item.ItemName</td>
                                        <td class="four-cols">@Model.Ncr.NcrQa.NcrQaQuanReceived</td>
                                        <td class="four-cols">@Model.Ncr.NcrQa.NcrQaQuanDefective</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            Defect Information
                        </div>
                        <div class="card-body pb-0 pt-0">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="two-cols-1">Name</th>
                                        <th class="two-cols">Description of Defect</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="two-cols-1">@Model.Ncr.NcrQa.Defect.DefectName</td>
                                        <td class="two-cols">@Model.Ncr.NcrQa.NcrQaDescriptionOfDefect</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body pb-0">
                        <table class="table m-0">
                            <thead class="custom-light-bg">
                                <tr>
                                    <th class="three-cols">Quality Representative</th>
                                    <th class="three-cols">Creation Date</th>
                                    <th class="three-cols">Last Updated</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="three-cols">R. May</td>
                                    <td class="three-cols">@Model.Ncr.NcrQa.NcrQacreationDate.ToString("yyyy-MM-dd")</td>
                                    <td class="three-cols">
                                        @{
                                            if (Model.UpdatedOn.HasValue)
                                            {
                                                DateTime localUpdatedOn = TimeZoneInfo.ConvertTimeFromUtc(Model.UpdatedOn.Value, TimeZoneInfo.Local);
                                                @localUpdatedOn.ToString("yyyy-MM-dd HH:mm:ss")
                                            }
                                            else
                                            {
                                                @("No available")
                                            }
                                        }
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <button class="btn custom-secondary-bg icon-drop text-start" type="button" data-bs-toggle="collapse" data-bs-target="#additionalInfo" aria-expanded="false" aria-controls="additionalInfo">
                    Additional Information <i class="bi bi-chevron-down"></i>
                </button>
                <div class="collapse" id="additionalInfo">
                    <div class="card-header">
                        Images
                    </div>

                    <div id="photoCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                            @if (Model.Ncr.NcrQa.ItemDefectPhotos != null && Model.Ncr.NcrQa.ItemDefectPhotos.Any())
                    {
                                for (int i = 0; i < Model.Ncr.NcrQa.ItemDefectPhotos.Count; i++)
                    {
                    <button type="button" data-bs-target="#photoCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="true" aria-label="Slide @(i + 1)"></button>
                    }
                    }
                    </div>
                    <div class="carousel-inner">
                            @if (Model.Ncr.NcrQa.ItemDefectPhotos != null && Model.Ncr.NcrQa.ItemDefectPhotos.Any())
                    {
                                var defectPhotosList = Model.Ncr.NcrQa.ItemDefectPhotos.ToList();
                    for (int i = 0; i < defectPhotosList.Count; i++)
                    {
                    var photo = defectPhotosList.ElementAt(i);
                    if (photo.ItemDefectPhotoContent != null)
                    {
                    string imageBase64 = Convert.ToBase64String(photo.ItemDefectPhotoContent);
                    string imageSrc = string.Format("data:" + photo.ItemDefectPhotoMimeType + ";base64,{0}", imageBase64);

                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                            <img src="@imageSrc" alt="Defect Photo of @Model.Ncr.NcrQa.Defect.DefectName" title="Defect Photo of @Model.Ncr.NcrQa.Defect.DefectName" class="d-block w-100 img-fluid rounded" />
                    </div>
                    }
                    }
                    }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#photoCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#photoCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                    </button>
                    </div>

                    <div class="card-body pb-0">
                        <div class="row">
                            @{
                                if (Model.Ncr.NcrQa.ItemDefectPhotos != null && Model.Ncr.NcrQa.ItemDefectPhotos.Any())
                                {
                                    foreach (var photo in Model.Ncr.NcrQa.ItemDefectPhotos)
                                    {
                                        if (photo.ItemDefectPhotoContent != null)
                                        {
                                            string imageBase64 = Convert.ToBase64String(photo.ItemDefectPhotoContent);
                                            string imageSrc = string.Format("data:" + photo.ItemDefectPhotoMimeType + ";base64,{0}", imageBase64);

                                            <div class="text-center pb-3 col-6">
                                                <img src="@imageSrc" alt="Defect Photo of @Model.Ncr.NcrQa.Defect.DefectName" title="Defect Photo of @Model.Ncr.NcrQa.Defect.DefectName" class="img-fluid rounded" />
                                            </div>
                                        }
                                    }
                                }
                            }
                        </div>
                    </div>
                    <div class="card-header">
                        Attachments / Comments
                    </div>
                    <div class="card-body">

                        @if (Model.Ncr.NcrQa.NcrQaDefectVideo != null)
                        {
                            <a href="@Model.Ncr.NcrQa.NcrQaDefectVideo" target="_blank">Video Link</a>
                        }
                    </div>
                </div>
            </div>



            <button class="btn custom-header-bg icon-drop text-start" type="button" data-bs-toggle="collapse" data-bs-target="#engineerRepSection" aria-expanded="true" aria-controls="engineerRepSection">
                Engineer <i class="bi bi-chevron-down"></i>
            </button>
            <div class="collapse show" id="engineerRepSection">
                <div class="card">
                    <div class="card-body pb-0 pt-0">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="three-cols">Disposition</th>
                                   
                                    <th class="three-cols">Customer Notification</th>
                                    <th class="three-cols">Drawing Require Updating</th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    
                                    <td class="three-cols">@Model.Ncr.NcrEng.EngDispositionType.EngDispositionTypeName</td>
                                   
                                    <td class="three-cols">@(Model.NcrEngCustomerNotification == true ? "Yes" : "No")</td>
                                    <td class="three-cols">@(Model.Drawing.DrawingRequireUpdating == true ? "Yes" : "No")</td>
    
      
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-body pb-0 pt-0">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Disposition</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Ncr.NcrEng.NcrEngDispositionDescription</td>
                                
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            Drawing
                        </div>
                        <div class="card-body pb-0 pt-0">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="four-cols">Original Rev. Number</th>
                                        <th class="four-cols">Updated Rev. Number</th>
                                        <th class="four-cols">Name of Engineer</th>
                                        <th class="four-cols">Revision Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="four-cols">@Model.Drawing.DrawingOriginalRevNumber</td>
                                        <td class="four-cols">@Model.Drawing.DrawingUpdatedRevNumber</td>
                                        <td> J. Laferty</td>
                                       @*  <td class="four-cols">@Model.Drawing.NcrEngId</td> *@
                                        <td class="four-cols">@Model.Drawing.DrawingRevDate</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
