@model HaverDevProject.Models.Supplier

@{
    ViewData["Title"] = "Delete";
}
<div class="col-md-6 col-10 mx-auto">
    <h1>Supplier</h1>
</div>
<div class="col-md-6 col-10 mx-auto">
    <div class="card border-2">
        <div class="card-header bg-custom-color mb-2">
            <h2>Delete Supplier</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        <div class="card-body col-lg-10 col-11 mx-auto">
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.SupplierCode)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SupplierCode)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.SupplierName)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SupplierName)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.SupplierEmail)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SupplierEmail)
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="SupplierId" />
                <div class="form-group d-flex justify-content-end mt-2">                
                    <div>
                        <button type="button" onclick="location.href='@Url.Action("Index")'" class="btn btn-secondary">
                            <i class="bi bi-arrow-90deg-left"></i> Back to List
                        </button>
                    </div>
                    <div>
                        <input type="submit" value="Delete" class="btn btn-danger ms-4"/>
                    </div>                
                </div>
            </form>
        </div>
    </div>
</div>
