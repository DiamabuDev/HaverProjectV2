</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        var checkbox = document.getElementById("NcrReInspectAcceptable");

        checkbox.addEventListener("change", function () {
            if (!checkbox.checked) {
                // If checkbox is unchecked, show confirmation dialog
                var confirmResult = confirm("Do you want to make a new NCR?");
                if (!confirmResult) {
                    // If user cancels, keep checkbox checked
                    checkbox.checked = true;
                }
                else {
                    window.location.href = "/NcrQa/Create";
                }
            } else {
                textbox.disabled = false;
            }
        });
    </script>
}
