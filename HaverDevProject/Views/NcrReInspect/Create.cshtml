@model HaverDevProject.Models.NcrReInspect

@{
    ViewData["Title"] = "Create";
}

<div class="col-md-8 col-10 mx-auto">
    <h1><i class="bi bi-caret-right-fill"></i>Re-Inspection</h1>
</div>

<div class="col-md-8 col-10 mx-auto">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="card border-2">
            <div class="card-header bg-custom-color mb-2 d-flex justify-content-between">
                <div>
                    <h2 class="m-0">Create NCR Re-Inspection</h2>
                </div>
                <div class="justify-content-end">
                    <p class="m-0">Fields marked <span class="fw-bold text-danger">*</span> are required.</p>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="card-body col-lg-10 col-11 mx-auto">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="NcrReInspectAcceptable" /> @Html.DisplayNameFor(model => model.NcrReInspectAcceptable)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="NcrId" class="control-label"></label>
                            <select asp-for="NcrId" class="form-control" asp-items="ViewBag.NcrId" disabled></select>
                            <span asp-validation-for="NcrId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="NcrReInspectUserId" class="control-label"></label>
                            <input asp-for="NcrReInspectUserId" class="form-control" />
                            <span asp-validation-for="NcrReInspectUserId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label custom-file-label">Upload Additional Photos:</label>
                    <input type="file" class="form-control" name="Photos" multiple="multiple" />
                </div>

                <div class="form-group">
                    <label asp-for="NcrReInspectDefectVideo" class="control-label"></label>
                    <input asp-for="NcrReInspectDefectVideo" class="form-control" />
                    <span asp-validation-for="NcrReInspectDefectVideo" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer">
                <div class="form-group d-flex justify-content-end mt-2">
                    <div>
                        <button type="button" onclick="location.href='@ViewData["returnURL"]'" class="btn btn-primary ">
                            <i class="bi bi-arrow-90deg-left"></i> Back to the @ViewData["ControllerName"] List
                        </button>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary ms-4">
                            <i class='bi-plus-square-dotted'></i> Create Re-Inspection
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

