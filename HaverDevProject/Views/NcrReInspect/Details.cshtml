@model HaverDevProject.Models.NcrReInspect

@{
    ViewData["Title"] = "Non Conforming Report Details";
}

<div class="container mt-3">

    <div class="row">
        <div class="col-md-10 mx-auto">
            <h1><i class="bi bi-caret-right-fill"></i>Non Conforming Report Re-Inspection Details</h1>
            <div class="row align-items-center mb-3 mt-4">
                <div class="col-auto fw-bold fs-5">
                    NCR No.:
                </div>
                <div class="col-auto fs-5">
                    @Model.Ncr.NcrNumber
                </div>
                <div class="col-auto">
                    <span class="btn @(Model.Ncr.NcrStatus == false ? "text-white bg-danger" : "text-white bg-success")" style="cursor: default;">
                        @(Model.Ncr.NcrStatus == true ? "Active" : "Closed")
                    </span>
                </div>
                @if (Model.Ncr.NcrStatus == false)
                {
                    <div class="col-auto">
                        <span class="fw-bold">Quality Department:</span>
                        <span> [Department Name]</span>
                    </div>
                }
                <div class="col-auto">
                    <span class="fw-bold">Last Updated:</span>
                    <span> @Model.Ncr.NcrLastUpdated.ToString("yyyy-MM-dd")</span>
                </div>
            </div>
            <button class="btn custom-header-bg icon-drop text-start" type="button" data-bs-toggle="collapse" data-bs-target="#qualityRepSection" aria-expanded="true" aria-controls="qualityRepSection">
                Quality Representative <i class="bi bi-chevron-down"></i>
            </button>
            <div class="collapse" id="qualityRepSection">
                <div class="card">
                    <div class="card-body pb-0 pt-0">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="four-cols">Process Applicable</th>
                                    <th class="four-cols">Supplier Name</th>
                                    <th class="four-cols">PO or Prod. No.</th>
                                    <th class="four-cols">Sales Order No.</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="four-cols">@(Model.Ncr.NcrQa.NcrQaProcessApplicable == true ? "Supplier or Rec-Insp" : "WIP (Production Order)")</td>
                                    @* <td class="four-cols">@Model.Ncr.NcrQa.Item.Supplier.SupplierName</td> *@
                                    <td class="four-cols">
                                    @if (Model != null && Model.Ncr != null && Model.Ncr.NcrQa != null && Model.Ncr.NcrQa.Item != null && Model.Ncr.NcrQa.Item.Supplier != null)
                                    {
                                        @Model.Ncr.NcrQa.Item.Supplier.SupplierName
                                    }
                                    else
                                    {
                                        <text>N/A</text>
                                    }
                                    </td>
                                    <td class="four-cols">@Model.Ncr.NcrQa.NcrQaOrderNumber</td>
                                    <td class="four-cols">@Model.Ncr.NcrQa.NcrQaSalesOrder</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-body pb-0 pt-0">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Item Marked NonConforming</th>
                                    <th>Engineer Disposition Required?</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@(Model.Ncr.NcrQa.NcrQaItemMarNonConforming == true ? "Yes" : "No")</td>
                                    <td>@(Model.Ncr.NcrQa.NcrQaEngDispositionRequired == true ? "Yes" : "No")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            Item Information
                        </div>
                        <div class="card-body pb-0 pt-0">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="four-cols">SAP No.</th>
                                        <th class="four-cols">Description</th>
                                        <th class="four-cols">Quantity Received</th>
                                        <th class="four-cols">Quantity Defective</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        @* <td class="four-cols">@Model.Ncr.NcrQa.Item.ItemNumber</td> *@
                                        <td class="four-cols">
                                        @if (Model != null && Model.Ncr != null && Model.Ncr.NcrQa != null && Model.Ncr.NcrQa.Item != null && Model.Ncr.NcrQa.Item.ItemNumber != null)
                                        {
                                            @Model.Ncr.NcrQa.Item.Supplier.SupplierName
                                        }
                                        else
                                        {
                                            <text>N/A</text>
                                        }
                                        </td>
@*                                         <td class="four-cols">@Model.Ncr.NcrQa.Item.ItemName</td>
                                            *@
                                        <td class="four-cols">
                                        @if (Model != null && Model.Ncr != null && Model.Ncr.NcrQa != null && Model.Ncr.NcrQa.Item != null && Model.Ncr.NcrQa.Item.ItemName != null)
                                        {
                                            @Model.Ncr.NcrQa.Item.Supplier.SupplierName
                                        }
                                        else
                                        {
                                            <text>N/A</text>
                                        }
                                        </td>
                                        <td class="four-cols">@Model.Ncr.NcrQa.NcrQaQuanReceived</td>
                                        <td class="four-cols">@Model.Ncr.NcrQa.NcrQaQuanDefective</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            Defect Information
                        </div>
                        <div class="card-body pb-0 pt-0">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="two-cols-1">Name</th>
                                        <th class="two-cols">Description of Defect</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        @* <td class="two-cols-1">@Model.Ncr.NcrQa.Defect.DefectName</td> *@
                                        <td class="four-cols">
                                        @if (Model != null && Model.Ncr != null && Model.Ncr.NcrQa != null && Model.Ncr.NcrQa.Defect != null && Model.Ncr.NcrQa.Defect.DefectName != null)
                                        {
                                            @Model.Ncr.NcrQa.Defect.DefectName
                                        }
                                        else
                                        {
                                            <text>N/A</text>
                                        }
                                        </td>
                                        <td class="two-cols">@Model.Ncr.NcrQa.NcrQaDescriptionOfDefect</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body pb-0">
                        <table class="table m-0">
                            <thead class="custom-light-bg">
                                <tr>
                                    <th class="three-cols">Quality Representative</th>
                                    <th class="three-cols">Creation Date</th>
                                    <th class="three-cols">Last Updated</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="three-cols">R. May</td>
                                    <td class="three-cols">@Model.Ncr.NcrQa.NcrQacreationDate.ToString("yyyy-MM-dd")</td>
                                    <td class="three-cols">
                                        @{
                                            if (Model.UpdatedOn.HasValue)
                                            {
                                                DateTime localUpdatedOn = TimeZoneInfo.ConvertTimeFromUtc(Model.UpdatedOn.Value, TimeZoneInfo.Local);
                                                @localUpdatedOn.ToString("yyyy-MM-dd HH:mm:ss")
                                            }
                                            else
                                            {
                                                @("No available")
                                            }
                                        }
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <button class="btn custom-secondary-bg icon-drop text-start" type="button" data-bs-toggle="collapse" data-bs-target="#additionalInfo" aria-expanded="false" aria-controls="additionalInfo">
                    Additional Information <i class="bi bi-chevron-down"></i>
                </button>
                <div class="collapse" id="additionalInfo">
                    <div class="card-header">
                        Images
                    </div>
                    <div class="card-body pb-0">
                        <div class="row">
                            @{
                                if (Model.Ncr.NcrQa.ItemDefectPhotos != null && Model.Ncr.NcrQa.ItemDefectPhotos.Any())
                                {
                                    foreach (var photo in Model.Ncr.NcrQa.ItemDefectPhotos)
                                    {
                                        if (photo.ItemDefectPhotoContent != null)
                                        {
                                            string imageBase64 = Convert.ToBase64String(photo.ItemDefectPhotoContent);
                                            string imageSrc = string.Format("data:" + photo.ItemDefectPhotoMimeType + ";base64,{0}", imageBase64);

                                            <div class="text-center pb-3 col-6">
                                                <img src="@imageSrc" alt="Defect Photo of @Model.Ncr.NcrQa.Defect.DefectName" title="Defect Photo of @Model.Ncr.NcrQa.Defect.DefectName" class="img-fluid rounded" />
                                            </div>
                                        }
                                    }
                                }
                            }
                        </div>
                    </div>
                    <div class="card-header">
                        Attachments / Comments
                    </div>
                    <div class="card-body">

                        @if (Model.Ncr.NcrQa.NcrQaDefectVideo != null)
                        {
                            <a href="@Model.Ncr.NcrQa.NcrQaDefectVideo" target="_blank">Video Link</a>
                        }
                    </div>
                </div>
            </div>

            @*Engineer*@
            <button class="btn custom-header-bg icon-drop text-start" type="button" data-bs-toggle="collapse" data-bs-target="#engineerSection" aria-expanded="true" aria-controls="engineerSection">
                Engineer <i class="bi bi-chevron-down"></i>
            </button>

            @*Operations*@
            <button class="btn custom-header-bg icon-drop text-start" type="button" data-bs-toggle="collapse" data-bs-target="#operationsSection" aria-expanded="true" aria-controls="operationsSection">
                Operations <i class="bi bi-chevron-down"></i>
            </button>

            @*Procurement*@
            <button class="btn custom-header-bg icon-drop text-start" type="button" data-bs-toggle="collapse" data-bs-target="#procurementSection" aria-expanded="true" aria-controls="procurementSection">
                Procurement <i class="bi bi-chevron-down"></i>
            </button>

            @*Re-Inspection*@
            <button class="btn custom-header-bg icon-drop text-start" type="button" data-bs-toggle="collapse" data-bs-target="#reInspectSection" aria-expanded="true" aria-controls="reInspectSection">
                Re-Inspection <i class="bi bi-chevron-down"></i>
            </button>
            <div class="collapse show" id="reInspectSection">
                <div class="card">
                    <div class="card-body pb-0 pt-0">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="four-cols">NCR #</th>
                                    <th class="four-cols">Acceptable</th>
                                    <th class="four-cols">New NCR #</th>
                                    <th class="four-cols">Re-Inpsection Done By</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="card-body pb-0 pt-0">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td class="four-cols">@Model.Ncr.NcrNumber</td>
                                    <td class="four-cols">
                                        @if (Model.NcrReInspectAcceptable == true)
                                        {
                                            <text>Yes</text>
                                        }
                                        else
                                        {
                                            <text>No</text>
                                        }
                                    </td>
                                    <td class="four-cols">
                                        @if (Model.NcrReInspectNewNcrNumber == null)
                                        {
                                            <text>N/A</text>
                                        }
                                        else
                                        {
                                            <text></text>
                                        }
                                    </td>
                                    <td class="four-cols">
                                        @if (Model.NcrReInspectUserId == 1)
                                        {
                                            <text>Bob</text>
                                        }
                                        else if (Model.NcrReInspectUserId == 2)
                                        {
                                            <text>John</text>
                                        }
                                        else if (Model.NcrReInspectUserId == 3)
                                        {
                                            <text>Paul</text>
                                        }
                                        else
                                        {
                                            <text>Dave</text>
                                        }
                                    </td>
                                </tr>
                            </tbody>

                        </table>
                    </div>             
                </div>
                <button class="btn custom-secondary-bg icon-drop text-start" type="button" data-bs-toggle="collapse" data-bs-target="#additionalInfo2" aria-expanded="false" aria-controls="additionalInfo2">
                    Additional Information <i class="bi bi-chevron-down"></i>
                </button>
                <div class="collapse" id="additionalInfo2">
                    <div class="card-header">
                        Images
                    </div>

                    <div class="card-body pb-0">
                        <div class="row">
                            @{
                                if (Model.NcrReInspectPhotos != null && Model.NcrReInspectPhotos.Any())
                                {
                                    foreach (var photo in Model.NcrReInspectPhotos)
                                    {
                                        if (photo.NcrReInspectPhotoContent != null)
                                        {
                                            string imageBase64 = Convert.ToBase64String(photo.NcrReInspectPhotoContent);
                                            string imageSrc = string.Format("data:" + photo.NcrReInspectPhotoMimeType + ";base64,{0}", imageBase64);

                                            <div class="text-center pb-3 col-6">
                                                <img src="@imageSrc" alt="" title="" class="img-fluid rounded" />
                                            </div>
                                        }
                                    }
                                }
                            }
                        </div>
                    </div>
                    <div class="card-header">
                        Attachments / Comments
                    </div>
                    <div class="card-body">

                        @if (Model.NcrReInspectDefectVideo != null)
                        {
                            <a href="@Model.NcrReInspectDefectVideo" target="_blank">Video Link</a>
                        }
                    </div>
                </div>
            </div>


            <div class="form-group d-flex justify-content-end mt-2">
                <button class="btn btn-secondary me-4">
                    <i class="bi bi-file-pdf"></i> Download PDF
                </button>
                <button class="btn btn-secondary me-4">
                    <i class="bi bi-file-earmark-spreadsheet"></i> Download Excel File
                </button>
                <button type="button" onclick="location.href='@Url.Action("Index")'" class="btn btn-primary">
                    <i class="bi bi-arrow-90deg-left"></i> Back to NCR Re-Inspection List
                </button>
            </div>

        </div>
    </div>
</div>

