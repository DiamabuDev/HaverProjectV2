@model HaverDevProject.Models.StatusUpdate

<partial name="_ViewHeading" />

<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="StatusUpdateId" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="StatusUpdateName" class="control-label"></label>
                <input asp-for="StatusUpdateName" class="form-control" />
                <span asp-validation-for="StatusUpdateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <partial name="_BackToList" />
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
