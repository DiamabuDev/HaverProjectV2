                        <div class="row">
                            @{
                                if (Model.ItemDefectPhotos != null && Model.ItemDefectPhotos.Any())
                                {
                                    foreach (var photo in Model.ItemDefectPhotos)
                                    {
                                        if (photo.ItemDefectPhotoContent != null)
                                        {
                                            string imageBase64 = Convert.ToBase64String(photo.ItemDefectPhotoContent);
                                            string imageSrc = string.Format("data:" + photo.ItemDefectPhotoMimeType + ";base64,{0}", imageBase64);

                                            <div class="text-center pb-3 col-6">
                                                <img src="@imageSrc" alt="Defect Photo of @Model.Defect.DefectName" title="Defect Photo of @Model.Defect.DefectName" class="img-fluid rounded" />
                                            </div>                                            
                                        }
                                    }
                                }
                            }                            
                        </div>
                    </div>
                    <div class="card-header">
                        Attachments / Comments
                    </div>                    
                    <div class="card-body">
                        
                            @if (Model.NcrQaDefectVideo != null)
                            {
                                <a href="@Model.NcrQaDefectVideo" target="_blank">Video Link</a>
                            }      
                    </div>
                </div>
            </div>
                    
            @* <button class="btn custom-header-bg icon-drop text-start" type="button" data-bs-toggle="collapse" data-bs-target="#engSection" aria-expanded="true" aria-controls="engSection">
                Engineering <i class="bi bi-chevron-down"></i>
            </button>  *@            

            <div class="form-group d-flex justify-content-end mt-2">
                <button class="btn btn-secondary me-4">
                    <i class="bi bi-file-pdf"></i> Download PDF
                </button>
                <button class="btn btn-secondary me-4">
                    <i class="bi bi-file-earmark-spreadsheet"></i> Download Excel File
                </button>
                <button type="button" onclick="location.href='@Url.Action("Index")'" class="btn btn-primary">
                    <i class="bi bi-arrow-90deg-left"></i> Back to NCR List
                </button>
                <div>
                    <a type="button" class="btn btn-primary ms-4" asp-action="Edit" asp-route-id="@Model?.NcrId">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>