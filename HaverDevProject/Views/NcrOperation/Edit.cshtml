@model HaverDevProject.ViewModels.NcrOperationDTO

@{
    ViewData["Title"] = "Edit";
}

<div class="col-md-8 col-10 mx-auto">
    <h1><i class="bi bi-caret-right-fill"></i>Operations</h1>
</div>

<div class="col-md-8 col-10 mx-auto">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="NcrOpId" />
        <input type="hidden" asp-for="NcrId" />

        <div class="card border-2">
            <div class="card-header bg-custom-color mb-2 d-flex justify-content-between">
                <div>
                    <h2 class="m-0">Edit NCR</h2>
                </div>
                <div class="justify-content-end">
                    <p class="m-0">Fields marked <span class="fw-bold text-danger">*</span> are required.</p>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="card-body col-lg-10 col-11 mx-auto">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="NcrNumber" class="control-label"></label>
                            <input asp-for="NcrNumber" class="form-control" readonly />
                            <span asp-validation-for="NcrNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="UpdateOp" class="control-label"></label>
                            <input asp-for="UpdateOp" class="form-control" readonly />
                            <span asp-validation-for="UpdateOp" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="OpDispositionTypeId" class="control-label"></label>
                        <select asp-for="OpDispositionTypeId" class="form-control" asp-items="ViewBag.OpDispositionTypeId">
                            <option value="">Select Preliminary Decision</option>
                        </select>
                        <span asp-validation-for="OpDispositionTypeId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NcrPurchasingDescription" class="control-label"></label>
                        <input asp-for="NcrPurchasingDescription" class="form-control" />
                        <span asp-validation-for="NcrPurchasingDescription" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label class="pb-3">Was a CAR raised?</label>
                            <div class="text-left">
                                <div class="form-check form-check-inline">
                                    <input type="radio" class="form-check-input" asp-for="Car" value="true" />
                                    <label class="form-check-label">Yes</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input type="radio" class="form-check-input" asp-for="Car" value="false" checked />
                                    <label class="form-check-label">No</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="CarNumber" class="control-label"></label>
                                <input asp-for="CarNumber" class="form-control" disabled="disabled" />
                                <span asp-validation-for="CarNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label class="pb-3">Follow-Up Requiered?</label>
                                <div class="text-left">
                                    <div class="form-check form-check-inline">
                                        <input type="radio" class="form-check-input" asp-for="FollowUp" value="true" />
                                        <label class="form-check-label">Yes</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input type="radio" class="form-check-input" asp-for="FollowUp" value="false" checked />
                                        <label class="form-check-label">No</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="FollowUpTypeId" class="control-label"></label>
                                <select asp-for="FollowUpTypeId" class="form-control" asp-items="ViewBag.FollowUpTypeId" disabled="disabled">
                                    <option value="">Select Follow Type</option>
                                </select>
                                <span asp-validation-for="FollowUpTypeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="ExpectedDate" class="control-label"></label>
                                <input asp-for="ExpectedDate" class="form-control date-input" disabled="disabled" />
                                <span asp-validation-for="ExpectedDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label"> Current Photos:</label>
                        <div class="ml-md-3">
                            @{
                                int fileCount = Model.ItemDefectPhotos.Count;
                                if (fileCount > 0)
                                {
                                    var firstFile = Model.ItemDefectPhotos.FirstOrDefault(); ;
                                    if (fileCount > 1)
                                    {
                                        <a class="" role="button" data-bs-toggle="collapse" href="#collapsePhotos@(Model.NcrOpId)" aria-expanded="false" aria-controls="collapsePhotos@(Model.NcrOpId)">
                                            <span class="badge bg-info">@fileCount</span> Photos...
                                        </a>
                                        <div class="collapse" id="collapsePhotos@(Model.NcrOpId)">
                                            @{
                                                foreach (var d in Model.ItemDefectPhotos)
                                                {
                                                    <a asp-controller="NcrQa" asp-action="Download" asp-route-id="@d.ItemDefectPhotoId">@d.FileName</a> <br />
                                                }
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <a asp-controller="NcrOperaion" asp-action="Download" asp-route-id="@firstFile.ItemDefectPhotoId">@firstFile.FileName</a>
                                    }
                                }
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label class="control-label custom-file-label">Upload Photos:</label>
                            <div class="input-group mb-3">
                                <input type="file" class="form-control" name="Photos" multiple="multiple" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="NcrOperationVideo" class="control-label"></label>
                            <input asp-for="NcrOperationVideo" class="form-control" />
                            <span asp-validation-for="NcrOperationVideo" class="text-danger"></span>


                        </div>

                </div>

            </div>
                <div class="row">
                    <p>
                        Completed NCR to be forwarded to HBC Procurement Manager complete with any relevant documents attached (pictures, actual measurements, material certs, etc.)
                    </p>

                </div>
            </div>
            <div class="card-footer">
                <div class="form-group d-flex justify-content-end mt-2">
                    <div>
                        <button type="button" onclick="location.href='@ViewData["returnURL"]'" class="btn btn-primary ">
                            <i class="bi bi-arrow-90deg-left"></i> Back to the @ViewData["ControllerName"] List
                        </button>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary ms-4">
                            <i class="bi bi-floppy"></i> Save
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {

}