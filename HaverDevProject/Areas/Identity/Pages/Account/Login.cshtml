@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body, main {
        margin: 0;
        padding: 0;
    }
    #mainRow {
        margin: 0;
        padding: 0;
    }
    #mainContainer {
        margin: 0;
        padding: 0;
    }
    #rightBackground {
        background: url('https://res.cloudinary.com/dyonjrmgj/image/upload/v1711939182/app_resources/backLogin_igbtqj.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
    }
    section {
        padding-left: 100px;
        padding-right: 100px;
    }

 </style>

<div id="mainContainer">
    <div id="mainContainer" class="row align-items-center">
        <div class="col-md-6">
            <section>
                <h1>@ViewData["Title"]</h1>

                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div id="rightBackground" class="col-md-6">
@*             <img src="https://res.cloudinary.com/dyonjrmgj/image/upload/v1711152689/haver/backLogin_qayfxr.png" alt="Girl in a jacket" width="500" height="600">
 *@
        </div>
    </div>
</div>